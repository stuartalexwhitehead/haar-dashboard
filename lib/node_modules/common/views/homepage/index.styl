.homepage {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: $white;
  
  &__centering {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    text-align: center;
    width: 100%;
  }
  
  &__logo {
    width: 60%;
    max-width: rem(300);
    display: ineline-block;
    fill: $primary--dark;
  }
  
  &__strapline {
    margin: rem(20) rem(20) rem(30);
    line-height: 1.3;
    font-family: $font-family;
    font-size: rem(20);
    color: $primary--dark;
  }
  
  &__thesis,
  &__source {
    margin: rem(15);
  }
}
