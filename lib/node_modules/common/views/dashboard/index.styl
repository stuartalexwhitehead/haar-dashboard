.dashboard {
  &__device {
    width: 100%;
    margin: rem(30) 0;
    padding: rem(15);
    border: 1px solid $primary--dark;
    border-radius: rem(5);
    border: rem(3) solid transparent;
    border-image: linear-gradient(-45deg, $primary 0%, $secondary 100%);
    border-image-slice: 1;
    font-weight: 500;
  }
  
  &__device-title {
    font-family: $font-family;
    font-weight: 600;
    color: $primary--dark;
  }
  
  &__device-description {
    font-family: $font-family;
    color: $primary--dark;
    font-size: rem(14);
    line-height: 1.3;
    margin-top: rem(10);
  }
  
  &__sub-heading {
    font-family: $font-family;
    font-weight: 600;
    color: $primary--dark;
    font-size: rem(18);
    margin-top: rem(30);
  }
  
  &__device-cta {
    margin-top: rem(20);
  }
}

@media screen and (min-width: $bp--m) {
  .dashboard {
    &__device {
      width: 47.5%;
      display: inline-block;
    }
    
    &__device--odd {
      margin-right: 2.5%; 
    }
    
    &__device--even {
      margin-left: 2.5%;
      clear: both;
    }
  }
}

@media screen and (min-width: $bp--xl) {
  .dashboard {
    &__device {
      width: 32.33333333333333%;
      display: inline-block;
    }
    
    &__device--first {
      margin-right: 1.5%;
      clear: none;
    }
    
    &__device--second {
      margin-left: 1.5%; 
      margin-right: 1.5%;
      clear: none;
    }
    
    &__device--third {
      margin-left: 1.5%;
      clear: both;
    }
  }
}