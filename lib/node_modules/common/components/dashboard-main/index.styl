.dashboard-main {
  padding: rem(30);
  position: relative;

  &__overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(255,255,255, 0.9);
    z-index: 100;
  }
  
  &__logo {
    width: rem(100);
    fill: $grey;
  }
  
  &__footer {
    clear: both;
    margin-top: rem(30);
    text-align: center;
  }
}

@media screen and (min-width: $bp--l) {
  .dashboard-main {
    margin-left: rem(250);
  }
}