.dashboard-nav {
  background: $secondary;
  background: linear-gradient(-45deg, $primary 0%, $secondary 100%);
  padding: rem(30);
  
  &__items {
    margin-top: rem(30);
  }

  &__item {
    width: 100%;
    margin-top: rem(15);
  }
  
  &__link {
    link();
    color: $primary--dark;
    
    &::before {
      margin-right: 1em;
      transition: margin 0.15s;
    }
    
    &:hover::before {
      margin-right: 1.5em;
    }
  }
  
  &__logo {
    fill: $primary--dark;
  }
}

@media screen and (max-width: $bp--l) {
  .dashboard-nav {
    display: none;
    
    &--open {
      position: fixed;
      display: block;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
    }

    &__toggle {
      background-color: $primary--dark;
      position: fixed;
      top: rem(30);
      right: rem(30);
      padding: 3px 5px;
      border-radius: 3px;
      border: 1px solid $grey;
      font-size: rem(30);
      color: $white;
      cursor: pointer;
      z-index: 10;
      
      &::before{
        vertical-align: middle;
      }
    }
    
    &__logo {
      width: 50%;
    }
  } 
}

@media screen and (min-width: $bp--l) {
  .dashboard-nav {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    width: rem(250);
    border-right: 2px solid $primary--dark;

    &__toggle {
      display: none;
    }
  }
}