.filter {
  border-radius: rem(5);
  overflow: hidden;
  margin-top: rem(30);

  &__title {
    haar-gradient();
    font-family--demi();
    padding: rem(10);
    background-attachment: fixed;
    color: $primary--dark;
  }
  
  &__fields {
    padding: 0 rem(20) rem(20) rem(20);
    background-color: #eee;
    overflow: hidden;
  }
}