.responsive-table {
  font-family: $font-family;
  margin-top: rem(30);
  color: $primary--dark;
  font-size: rem(14);
  
  &--s,
  &--l {
    overflow: hidden;
    border-radius: rem(5);
    width: 100%;
  }
  
  &--s {
    & tr:first-child {
      haar-gradient();
      background-attachment: fixed;
      font-weight: 600;
    }
    
    & tr {
      background-color: #eee;
    }
    
    & td {
      padding: rem(10);
    }
  }
  
  &--l {
    & thead {
      haar-gradient();
      background-attachment: fixed;
      text-align: left;
    }
    
    & th {
      font-weight: 600;
      padding: rem(10);
    }
    
    & td {
      padding: rem(10);
      background-color: #eee;
      vertical-align: top;
    }
  }
}

@media screen and (max-width: $bp--m) {
  .responsive-table {
    &--l {
      display: none;
    }
  }
}

@media screen and (min-width: $bp--m) {
  .responsive-table {
    &--s {
      display: none;
    }
  }
}