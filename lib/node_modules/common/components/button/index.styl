.button {
  font-family: $font-family;
  font-size: rem($base-font-size);
  border: 1px solid #ccc;
  border-radius: rem(5);
  padding: em(5) em(15);
  outline: none;
  overflow: hidden;
  display: inline-block;
  color: $primary--dark;
  text-decoration: none;
  pointer: cursor;
  font-weight: 600;
  line-height: 1em;
  vertical-align: top;
  
  &--standard {
    background: linear-gradient(0deg, darken($primary, 5%), $primary);
    border: none;
    color: $primary--dark;
    
    &:hover {
      background: linear-gradient(0deg, darken($primary, 10%), darken($primary, 5%));
    }
    
    &:active {
      background: linear-gradient(0deg, darken($primary, 5%), darken($primary, 10%));
    }
  }
  
  &--small {
    font-size: rem(12);
  }
  
  &--large {
    font-size: rem(20);
  }
  
  &--fullWidth {

  }
  
  &--inverted {
    border: rem(3) solid transparent;
    border-image: linear-gradient(-45deg, $primary 0%, $secondary 100%);
    border-image-slice: 1;
    background: linear-gradient(0deg, #ddd, #eee);
    padding: rem(10) rem(20);
    font-weight: 500;
    
    &:hover {
      background: linear-gradient(0deg, darken(#ddd, 10%), darken(#eee, 5%));
    }
    
    &:active {
      background: linear-gradient(0deg, darken(#ddd, 5%), darken(#eee, 10%));
    }
  }
  
  &--danger {
    background: linear-gradient(0deg, darken($secondary, 10%), $secondary);
    color: $primary--dark;
    
    &:hover {
      background: linear-gradient(0deg, darken($secondary, 20%), darken($secondary, 10%));
    }
    
    &:active {
      background: linear-gradient(0deg, darken($secondary, 10%), darken($secondary, 20%));
    }
  }
}