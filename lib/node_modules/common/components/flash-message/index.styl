.flash-message {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  padding: rem(5) rem(10);
  border-radius: rem(3);
  font-family: $font-family;
  animation-duration: 5s;
  animation-name: hide;
  opacity: 0;
  vertical-align: middle;
  
  &--info {
    background-color: $primary;
    border: 1px solid darken($primary, 5%);
    color: darken($primary, 60%);
  }
  
  &--warning {
    background-color: rgba($error, 0.9);
    border: 1px solid darken($error, 5%);
    color: darken($error, 60%);
  }
  
  &--success {
    background-color: rgba($success, 0.9);
    border: 1px solid darken($success, 5%);
    color: darken($success, 60%);
  }
  
  &__icon::before {
    padding-right: 0.5em;
    vertical-align: middle;
  }
}

@keyframes hide {
  0% {
    opacity: 1;
  }

  90% {
    opacity: 1;
  }
  
  100% {
    opacity: 0;
    display: none;
  }
}