.matrix {
  clear: both;
  padding: rem(30);
  overflow: hidden;
  margin: rem(30) rem(-30) 0 rem(-30);
  background-color: darken($white, 5%);
  
  &__row {
    overflow: hidden;
    clear: both;
    margin-top: rem(30);
    border-top: 2px solid $primary--dark;
  }
  
  &__error {
    margin-top: rem(30);
    display: block;
    font-family: $font-family;
    color: $error;
    font-size: rem(12);
  }
}