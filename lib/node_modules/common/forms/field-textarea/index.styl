.field-textarea {
  &__label {
    font-family: $font-family;
    font-weight: 600;
    color: $primary--dark;
    display: block;
    margin-bottom: rem(10);
  }
  
  &__field {
    font-family: $font-family;
    font-size: rem(16);
    padding: rem(10);
    outline: none;
    border: 1px solid $grey--light;
    width: 100%;
    
    &:focus {
      border-color: $primary;
    }
  }
  
  &__error {
    font-family: $font-family;
    color: $error;
    display: block;
    margin-bottom: rem(10);
    font-size: rem(12);
  }
}