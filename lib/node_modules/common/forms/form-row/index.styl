.form-row {
  margin-top: rem(20);
  overflow: hidden;
}

@media screen and (min-width: $bp--m) {
  .form-row {
    width: 50%;
    display: inline-block;
    margin-top: rem(30);
    vertical-align: top;
    
    &:nth-child(2n+1) {
      clear: both;
      padding-right: rem(10);
    }
    
    &:nth-child(2n) {
      padding-left: rem(10);
    }
  }
}